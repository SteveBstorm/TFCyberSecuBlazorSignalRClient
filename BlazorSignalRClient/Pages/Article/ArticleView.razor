@page "/article"
@using BlazorSignalRClient.Models;
<h3>Liste des articles</h3>

<table class="table table-striped table-bordered">
    <tr>
        <th>Nom</th>
        <th>Prix</th>
        <th></th>
    </tr>
    @foreach (ArticleModel a in MaListe)
    {
        <tr>
            <td>@a.Name</td>
            <td>@a.Price</td>
            <td><button class="btn btn-sm btn-outline-info" @onclick="() => ClickInfo(a.Id)">Info</button></td>
        </tr>
    }
</table>

<hr />
@if (SelectedId > 0)
{
    <ArticleDetail Id="SelectedId"></ArticleDetail>
}

<hr />
<ArticleCreate></ArticleCreate>

